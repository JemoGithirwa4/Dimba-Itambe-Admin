<%- include("partials/header.ejs") %>

<div id="blog" class="container tab-content pb-4 fix-section live">   
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2">Video Highlights</h1>
      <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
          <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.location.href='/videos'">Add <i class="fa-solid fa-plus"></i></button>
          <button type="button" class="btn btn-sm btn-outline-secondary">Delete All <i class="fa-solid fa-trash"></i></button>
        </div>
      </div>
    </div>        

    <div class="card shadow p-4">
      <h4 class="text-center">Existing Video Highlights</h4>
      <div class="table-responsive">
          <table class="table table-striped mt-3">
              <thead>
                  <tr>
                      <th>#</th>
                      <th>Match Title</th>
                      <th>Video</th>
                      <th>Action</th>
                  </tr>
              </thead>
              <tbody id="videoList">
                <% if (videos.length === 0) { %>
                  <tr>
                      <td colspan="4" class="text-center text-muted">No videos available.</td>
                  </tr>
                <% } else { %>
                  <% videos.forEach((video, index) => { %>
                      <tr>
                        <td><%= index + 1 %></td>
                        <td><%= video.match_title %></td>
                        <td>
                          <iframe width="200" height="120" src="<%= video.video_url %>" frameborder="0" allowfullscreen></iframe>
                        </td>
                        <td>
                          <form action="/delete-video/<%= video.id %>" method="POST" class="d-inline">
                            <button type="submt" class="btn btn-danger btn-sm">Delete</button>
                          </form>
                        </td>
                      </tr>
                  <% }); %>
                <% } %>                
              </tbody>
          </table>
      </div>
    </div>
</div> 

<%- include("partials/footer.ejs") %>