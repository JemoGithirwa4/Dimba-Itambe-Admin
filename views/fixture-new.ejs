<%- include("partials/header.ejs") %>

<form action="/upload-fixture" method="POST" class="container mt-4 p-4 bg-light rounded shadow-sm">
    <h4 class="mb-3">Upload Fixture</h4>
  
    <div class="mb-3">
      <label for="matchDate" class="form-label">Match Date</label>
      <input type="date" class="form-control" id="matchDate" name="matchDate" required>
    </div>
  
    <div class="mb-3">
      <label for="homeTeam" class="form-label">Home Team</label>
      <select class="form-control" id="homeTeam" name="homeTeam" required>
        <option value="">-- Select Home Team --</option>
        <!-- Populate dynamically -->
      </select>
    </div>
  
    <div class="mb-3">
      <label for="awayTeam" class="form-label">Away Team</label>
      <select class="form-control" id="awayTeam" name="awayTeam" required>
        <option value="">-- Select Away Team --</option>
        <!-- Populate dynamically -->
      </select>
    </div>
  
    <div class="mb-3">
      <label for="venue" class="form-label">Venue</label>
      <input type="text" class="form-control" id="venue" name="venue" required>
    </div>
  
    <div class="mb-3">
      <label for="kickoffTime" class="form-label">Kickoff Time</label>
      <input type="time" class="form-control" id="kickoffTime" name="kickoffTime" required>
    </div>
  
    <button type="submit" class="btn btn-success my-btn">Upload Fixture</button>
</form>
  

<%- include("partials/footer.ejs") %>