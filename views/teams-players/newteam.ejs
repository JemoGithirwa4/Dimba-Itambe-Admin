<%- include("../partials/header.ejs") %>

<form action="/upload-team" method="POST" class="container mt-4 p-4 rounded shadow-sm card">
    <h4 class="mb-3">Add New Team</h4>
    
    <div class="mb-3">
      <label for="teamName" class="form-label">Team Name</label>
      <input type="text" class="form-control" id="teamName" name="teamName" placeholder="Enter Team Name" required>
    </div>

    <div class="mb-3">
      <label for="teamName" class="form-label">Team Abbreviation</label>
      <input type="text" class="form-control" id="teamAbb" name="teamAbb" placeholder="Enter Team Abbreviation" required>
    </div>

    <div class="mb-3">
      <label for="teamName" class="form-label">Team Website</label>
      <input type="text" class="form-control" id="teamWebsite" name="teamWebsite" placeholder="Enter Team Website URL" required>
    </div>

    <div class="mb-3">
      <label for="teamStadium" class="form-label">City</label>
      <input type="text" class="form-control" id="teamCity" name="teamCity" placeholder="Enter Home City" required>
    </div>
    
    <div class="mb-3">
      <label for="teamLogo" class="form-label">Team Logo</label>
      <input type="url" class="form-control" id="teamLogo" name="teamLogo" placeholder="Enter team logo URL" required>
    </div>
    
    <button type="submit" class="btn btn-primary my-btn">Add Team</button>
</form>
  

<%- include("../partials/footer.ejs") %>